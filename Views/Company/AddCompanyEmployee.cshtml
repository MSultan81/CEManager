@model CEManager.Models.Employee

@{
    ViewData["Title"] = "AddCompanyEmployee";
}
<br/>
<h1>Add a new Employee</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCompanyEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label label"></label>
                <input asp-for="FullName" class="form-control" value="" placeholder="FirstName LastName"/>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label label"></label>
                <input asp-for="Email" class="form-control" value="" placeholder="example@something.com" />
            </div>
              <div class="form-group" style="display:none;">
                <label asp-for="CompanyId" class="control-label label"></label>
                <input asp-for="CompanyId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label label"></label>
                <input asp-for="Position" class="form-control" value="" placeholder="Position"/>
            </div>
            <br/>
            <div class="form-group">
                <input style="width:50%; font-weight:bold;" type="submit" value="Add Employee" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}